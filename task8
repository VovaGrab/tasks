const correctUsername = "user123";
const correctPassword = "pass123";

// ввод пользователя через prompt
let enteredUsername = prompt("Введите ваш username:");
let enteredPassword = prompt("Введите ваш password:");

// Проверка ввода и вывод соответствующего сообщения
if (!enteredUsername && !enteredPassword) {
    alert("Ошибка Валидации");
} else if (enteredUsername === correctUsername && enteredPassword === correctPassword) {
    alert("Привет!");
} else if (enteredUsername === correctUsername) {
    alert("Неправильный пароль");
} else {
    alert("Неправильный username");
}
