let userInput = prompt("Введите число:");

if (userInput === null || userInput.trim() === "") {
    alert("Error: Введено пустое значение или нажата отмена.");
} else {
    let number = parseFloat(userInput);

    if (isNaN(number)) {
        alert("Error: Введено не число.");
    } else {
        if (number > 0) {
            alert("1");
        } else if (number < 0) {
            alert("-1");
        } else {
            alert("0");
        }
    }
}
