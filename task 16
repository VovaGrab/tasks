function sumInputNumbers() {
  let numbers = [];
  
  while (true) {
    let userInput = prompt("Введите число:");

    // Проверка на отмену ввода или пустую строку
    if (userInput === null || userInput === "" || isNaN(userInput)) {
      break;
    }

    // Преобразование введенного значения в число и добавление в массив
    numbers.push(Number(userInput));
  }

  // Суммирование элементов массива
  let sum = 0;
  for (let number of numbers) {
    sum += number;
  }

  return sum;
}

// Пример использования
let result = sumInputNumbers();
console.log("Сумма введенных чисел: " + result);
