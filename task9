    var name = prompt("Введите ваше имя:");

    alert("Привет, " + name + "!");
    var JS = confirm("Вы знакомы с языком JavaScript?");

    // Вывод сообщения в зависимости от ответа пользователя
    if (JS) {
        alert("Молодец!");
    } else {
        alert("Можно начать изучение прямо сейчас.");
